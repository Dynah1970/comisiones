    <table>
        <tr>
            <th>Condiciones</th>
            <th>Detalles</th>
        </tr>
        <tr>
            <td>Tipo</td>
            <td>CONAVERO - Compra de deuda</td>
        </tr>
        <tr>
            <td>SEIEM</td>
            <td>Incorporado a SEIEM</td>
        </tr>
        <tr>
            <td>Requisitos</td>
            <td>Nómina PM, recibos, número RFC</td>
        </tr>
    </table>
</body>
</html>
